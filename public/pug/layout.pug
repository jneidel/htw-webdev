doctype html
html
  head
    title= `${title} | What to do?`
    meta( charset="UTF-8" )
    meta( name="viewport" content="width=device-width,initial-scale=1.0" )
    link( rel="shortcut icon" type="image/ico" href="favicon.ico" )
    // http://convertico.com
    link( href="https://fonts.googleapis.com/css?family=Lato|Open+Sans" rel="stylesheet")
    link( href="../css/layout.css" rel="stylesheet" type="text/css" )
    block styles

  body
    #header
      #header-left
        a#logo-link( href="/" )
          p.logo What to do?
      #header-right.vertical-center
        - const isAuthorized = false // later set by on auth middleware
        if isAuthorized
          a.blue-btn( href="/app" )
            p Open App
        else
          a.blue-btn( href="/login" )
            p Login

    #main
      block main

    #footer
      div.horizontal-center
        a.white-link#footer-link( href="https://github.com/jneidel/htw-webdev-todo" ) Source

    block scripts

    style.
      html {
        box-sizing: border-box;
      }
      *:not( img ), *:before, *:after {
        box-sizing: inherit;
      }
